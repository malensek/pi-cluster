#!/usr/bin/env bash

source "$(cd "$(dirname "$0")" && pwd)/picle-functions.bash"

led="/sys/class/leds/led0"

echo "Disabling LEDs on the cluster..."
dssh -pqf ${PICLE_CONF}/cluster-members.txt 'echo "none" > /sys/class/leds/led0/trigger'

read -r -d '' remote_script <<EOM
while true; do
    echo 'default-on' > "${led}/trigger"
    echo -n 1
    sleep 2

    echo 'none' > "${led}/trigger"
    echo -n 0
    sleep 0.5
done
EOM

echo "Starting locator beacon. Press ^C to stop."
ssh '129.82.44.241' "${remote_script}"

echo "Restoring LEDs..."
dssh -pqf ${PICLE_CONF}/cluster-members.txt "echo 'mmc0' > ${led}/trigger"
